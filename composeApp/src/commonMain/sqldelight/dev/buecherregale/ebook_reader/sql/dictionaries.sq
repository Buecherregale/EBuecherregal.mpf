CREATE TABLE dictionaries (
    id TEXT NOT NULL PRIMARY KEY,
    name TEXT NOT NULL,
    originalLanguage TEXT NOT NULL,
    targetLanguage TEXT NOT NULL
);

CREATE INDEX dictionaries_name_idx ON dictionaries(name);

selectAll:
SELECT * FROM dictionaries;

selectById:
SELECT * FROM dictionaries WHERE id = ?;

save:
INSERT INTO dictionaries(
  id,
  name,
  originalLanguage,
  targetLanguage
)
VALUES (?, ?, ?, ?)
ON CONFLICT(id)
 DO UPDATE SET
    name = excluded.name,
    originalLanguage = excluded.originalLanguage,
    targetLanguage = excluded.targetLanguage;

deleteById:
DELETE FROM dictionaries WHERE id = ?;
